<%= simple_form_for(@job, html: {class: "form-horizontal"}) do |f| %>
	<%= f.collection_select :category_id, Category.all, :id, :name,  {prompt: "Choose a category"} %>
	<%= f.input :title, label: "Job Title", class: "form-control" %>
	<%= f.input :description, label: "Job Description", class: "form-control" %>
	<%= f.input :company, label: "Your Company", class: "form-control" %>
	<%= f.input :url, label: "Link to Job", class: "form-control" %>
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>